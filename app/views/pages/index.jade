extends ../layout

block content
  .wrapper
    section
    .carousel.slide#carousel-example-generic(data-ride="carousel")
      ol.carousel-indicators
        li.active(data-target="#carousel-example-generic", data-slide-to="0")
        li(data-target="#carousel-example-generic", data-slide-to="1")
        li(data-target="#carousel-example-generic", data-slide-to="2")
        li(data-target="#carousel-example-generic", data-slide-to="3")
        li(data-target="#carousel-example-generic", data-slide-to="4")
      .carousel-inner(role="listbox")
        .item.active
          img(src="images/index-carousel-1.jpg",alt="carousel-1")
        .item
          img(src="images/index-carousel-2.jpg",alt="carousel-2")
        .item
          img(src="images/index-carousel-3.jpg",alt="carousel-3")
        .item
          img(src="images/index-carousel-4.jpg",alt="carousel-4")
        .item
          img(src="images/index-carousel-5.jpg",alt="carousel-5")
      a.left.carousel-control(href="#carousel-example-generic", role="button", data-slide="prev")
        span.glyphicon.glyphicon-chevron-left
        span.sr-only 上一页
      a.right.carousel-control(href="#carousel-example-generic", role="button", data-slide="next")
        span.glyphicon.glyphicon-chevron-right
        span.sr-only 下一页
    .container
      .row
        .col-md-10.col-md-offset-1.screen
          #scrollMoives
            each item in movies
              .col-md-3
                .thumbnail
                  a(href="/movie/#{item._id}")
                    img(src="#{item.poster}", alt="#{item.title}")
                .caption
                  h3 #{item.title}
                  p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 查看详情
          
                